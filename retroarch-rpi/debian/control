Build-Depends: debhelper (>= 7), libsdl1.2-dev, libasound2-dev, libxv-dev, libopenal-dev, libsamplerate0-dev, libxml2-dev, libswscale-dev, libsdl-ttf2.0-dev, libfreetype6-dev, libsdl-image1.2-dev
